<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Inloggen</servlet-name>
        <servlet-class>servlets.Inloggen</servlet-class>
        <init-param>
            <param-name>gebruikersnaam</param-name>
            <param-value>Value</param-value>
        </init-param>
        <init-param>
            <param-name>wachtwoord</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Registreren</servlet-name>
        <servlet-class>servlets.Registreren</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gebruikers</servlet-name>
        <servlet-class>servlets.Gebruikers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Aanpassen</servlet-name>
        <servlet-class>servlets.Aanpassen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Toevoegen</servlet-name>
        <servlet-class>servlets.Toevoegen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reset</servlet-name>
        <servlet-class>servlets.Reset</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductVerwijderen</servlet-name>
        <servlet-class>servlets.ProductVerwijderen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAanpassen</servlet-name>
        <servlet-class>servlets.ProductAanpassen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductToevoegen</servlet-name>
        <servlet-class>servlets.ProductToevoegen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventVerwijderen</servlet-name>
        <servlet-class>servlets.InventVerwijderen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventToevoegen</servlet-name>
        <servlet-class>servlets.InventToevoegen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Zoeken</servlet-name>
        <servlet-class>servlets.Zoeken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reserveren</servlet-name>
        <servlet-class>servlets.Reserveren</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservatieVerwijderen</servlet-name>
        <servlet-class>servlets.ReservatieVerwijderen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Omzetten</servlet-name>
        <servlet-class>servlets.Omzetten</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Terugbrengen</servlet-name>
        <servlet-class>servlets.Terugbrengen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductUitlenen</servlet-name>
        <servlet-class>servlets.ProductUitlenen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Uitlenen</servlet-name>
        <servlet-class>servlets.Uitlenen</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Inloggen</servlet-name>
        <url-pattern>/Inloggen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registreren</servlet-name>
        <url-pattern>/Registreren.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gebruikers</servlet-name>
        <url-pattern>/Gebruikers.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Aanpassen</servlet-name>
        <url-pattern>/Aanpassen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Toevoegen</servlet-name>
        <url-pattern>/Toevoegen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reset</servlet-name>
        <url-pattern>/Reset.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductVerwijderen</servlet-name>
        <url-pattern>/ProductVerwijderen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductAanpassen</servlet-name>
        <url-pattern>/ProductAanpassen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductToevoegen</servlet-name>
        <url-pattern>/ProductToevoegen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventVerwijderen</servlet-name>
        <url-pattern>/InventVerwijderen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventToevoegen</servlet-name>
        <url-pattern>/InventToevoegen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Zoeken</servlet-name>
        <url-pattern>/Zoeken.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reserveren</servlet-name>
        <url-pattern>/Reserveren.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservatieVerwijderen</servlet-name>
        <url-pattern>/ReservatieVerwijderen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Omzetten</servlet-name>
        <url-pattern>/Omzetten.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Terugbrengen</servlet-name>
        <url-pattern>/Terugbrengen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductUitlenen</servlet-name>
        <url-pattern>/ProductUitlenen.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Uitlenen</servlet-name>
        <url-pattern>/Uitlenen.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
